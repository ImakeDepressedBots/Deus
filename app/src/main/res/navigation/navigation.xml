<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainPageFragment">

    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.amati.deus.ui.home.MainPageFragment"
        android:label="MainPageFragment"
        tools:layout="@layout/fragment_main_page" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.amati.deus.ui.auth.LoginFragment"
        android:label="LoginFragment" />
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment" />
    <fragment
        android:id="@+id/setAdminCypherFragment"
        android:name="com.amati.deus.ui.auth.SetAdminCypherFragment"
        android:label="fragment_set_admin_cypher"
        tools:layout="@layout/fragment_set_admin_cypher">
        <action
            android:id="@+id/action_setAdminCypherFragment_to_createPrimeCypherFragment"
            app:destination="@id/createPrimeCypherFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_setAdminCypherFragment"
        app:destination="@id/setAdminCypherFragment" />
    <fragment
        android:id="@+id/createPrimeCypherFragment"
        android:name="com.amati.deus.ui.auth.CreatePrimeCypherFragment"
        android:label="fragment_create_prime_cypher"
        tools:layout="@layout/fragment_create_prime_cypher">
        <action
            android:id="@+id/action_createPrimeCypherFragment_to_dailyAuthFragment"
            app:destination="@id/dailyAuthFragment" />
    </fragment>
    <fragment
        android:id="@+id/dailyAuthFragment"
        android:name="com.amati.deus.ui.auth.DailyAuthFragment"
        android:label="fragment_daily_auth"
        tools:layout="@layout/fragment_daily_auth" />
</navigation>