<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/deviceSensorImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/sensor_icon_image_description"
        android:src="@drawable/ic_action_sensor_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sensorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Humidity Sensor"
        app:layout_constraintBottom_toBottomOf="@+id/deviceSensorImage"
        app:layout_constraintStart_toEndOf="@+id/deviceSensorImage"
        app:layout_constraintTop_toTopOf="@+id/deviceSensorImage" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sensorSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/deviceSensorImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/sensorNameTextView"
        app:layout_constraintTop_toTopOf="@+id/deviceSensorImage" />

</androidx.constraintlayout.widget.ConstraintLayout>